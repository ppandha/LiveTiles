@model IEnumerable<LiveTiles.Models.Newsfeed>

@{
    ViewBag.Title = "News";
}

<h2>News Feeds</h2>

<p>
    To add a new RSS URL news source click 'Create New'. To change a current search click 'Edit'.
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.TileType)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RssUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.TileType)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RssUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefreshPeriod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TileId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TileId })
        </td>
    </tr>
}

</table>
