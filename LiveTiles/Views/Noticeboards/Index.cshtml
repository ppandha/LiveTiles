@model IEnumerable<LiveTiles.Models.Noticeboard>

@{
    ViewBag.Title = "Index";
}

<h2>Notices</h2>

<p>
    To add a new Noticeboard, click Create New, to change the Noticeboard refresh period click Edit. To add a new Notice to a Noticeboard click Items.
</p>
<p>
     @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefreshPeriod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefreshPeriod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TileId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TileId }) |
            @Html.ActionLink("Items", "Index", "NoticeboardItems", new { id = item.TileId }, new { Name = "Example" })
        </td>
    </tr>
}

</table>
