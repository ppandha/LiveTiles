@model List<LiveTiles.Models.TweetDisplay>


<div class="container">
    <table class="table">
        <tbody>
            @foreach (var t in @Model)
            {
                <tr>
                    <td><img src="@t.ImageUrl" width="42" height="42"></td>
                    <td>
                        <b>@t.Author</b>
                        <small>@t.Tweet</small>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
