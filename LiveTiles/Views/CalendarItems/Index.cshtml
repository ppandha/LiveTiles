@model List<object>

@{
    ViewBag.Title = "Calendar Items";
}

<h2>Calendar Items</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = (int)Model[0] })
</p>
<table class="table">
    <tr>
        <th>
            Content
        </th>
        <th>
            Location
        </th>
        <th>
            StartTime
        </th>
        <th>
            EndTime
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model[1] as IEnumerable<LiveTiles.Models.CalendarItem>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
 
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CalendarItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CalendarItemId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Calenders")
</div>