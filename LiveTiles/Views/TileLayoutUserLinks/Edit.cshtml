@model LiveTiles.Models.TileLayoutUserLink

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Tile Feed</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p>You can edit which feed displays in each tile here. The drop down will display all feeds which have been already configured. If you wish to configure a new feed, click on the feed name above and create a custom feed.</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TileLayoutUserLinkId)

        <div class="form-group" >
            @Html.LabelFor(model => model.UserAccount.OrgName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UserAccount.OrgName, new { htmlAttributes = new { @class = "form-control" }, disabled="disabled", @readonly = "readonly"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TileId, "TileId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TileId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TileId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
